@using TeamPlanner.ViewModels
@model LoginViewModel

<!-- Section: Design Block -->
<section class="text-center text-lg-start">

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Login</h2>
            <form asp-action="Login">

              <!-- Email input -->
              <div class="form-outline mb-4">
                <label asp-for="UserName" class="form-label" for="form3Example3">Username</label>
                <input asp-for="UserName" id="form3Example3" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <label asp-for="Password" class="form-label" for="form3Example4">Password</label>
                <input asp-for="Password" type="password" id="form3Example4" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Login
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->