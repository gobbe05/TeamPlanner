@using TeamPlanner.ViewModels
@model RegisterViewModel

<!-- Section: Design Block -->
<section class="text-center text-lg-start">

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Sign up now</h2>
            <form asp-action="Register">
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <label asp-for="FirstName" class="form-label" for="form3Example1">First name</label>
                    <input asp-for="FirstName" type="text" id="form3Example1" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <label asp-for="LastName" class="form-label" for="form3Example2">Last name</label>
                    <input asp-for="LastName" type="text" id="form3Example2" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <!-- Email input -->
              <div class="form-outline mb-4">
                <label asp-for="Email" class="form-label" for="form3Example3">Email address</label>
                <input asp-for="Email" type="email" id="form3Example3" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>

              <!-- Username input -->
              <div class="form-outline mb-4">
                <label asp-for="Username" class="form-label" for="form3Example5">Username</label>
                <input asp-for="Username" id="form3Example5" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <label asp-for="Password" class="form-label" for="form3Example4">Password</label>
                <input asp-for="Password" type="password" id="form3Example4" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              <!-- Password input -->
              <div class="form-outline mb-4">
                <label asp-for="ConfirmPassword" class="form-label" for="form3Example4">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" id="form3Example4" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Sign up
              </button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->