@model Group

<div class="card p-5 mt-5">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <h4 class="fw-bold text-white-50">Create a new group</h4>
            <div>
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Budget" class="form-label"></label>
                <input asp-for="Budget" type="number" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <button class="btn btn-primary w-100 mt-2" type="submit">Submit</button>
        </form>
    </div>
</div>